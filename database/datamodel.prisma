type User {
  id: ID! @id
  name: String!
  email: String! @unique
  parentEmail: String
  password: String!
  balance: Int! @default(value: 0)
  log: [Entry!]!
  class: String! @default(value: "main")
}

type Entry {
  id: ID! @id
  change: String!
  description: String!
  postedBy: User!
  createdAt: DateTime! @createdAt
}

type Purchase {
  id: ID! @id
  description: String!
  change: String!
  createdAt: DateTime! @createdAt
  postedBy: User!
}